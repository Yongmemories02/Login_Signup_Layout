<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingupScreen">
    <TextView
        android:id="@+id/masv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="21115053120124"
        android:paddingLeft="300dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lê Quang Luân"
        android:paddingLeft="315dp"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/login"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:layout_marginTop="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edname"
            android:textColor="@color/red"
            android:text="Name :*"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/fistname"
                android:background="@drawable/custom_editext"
                android:hint="Le Quang"
                android:padding="8dp"
                android:textColor="@color/white"/>
            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/lastname"
                android:background="@drawable/custom_editext"
                android:hint="Luan"
                android:padding="8dp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edusername"
            android:textColor="@color/red"
            android:text="Username :*"
            android:textStyle="bold"
           android:layout_margin="5dp"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:background="@drawable/custom_editext"
            android:hint="Enter username*"
            android:padding="8dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edpass"
            android:textColor="@color/red"
            android:text="Password:*"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:background="@drawable/custom_editext"
            android:hint="Create password*"
            android:padding="8dp"
            android:includeFontPadding="true"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edcpass"
            android:textColor="@color/red"
            android:text="Confirm password :*"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmpass"
            android:background="@drawable/custom_editext"
            android:hint="Confirm password*"
            android:padding="8dp"
            android:includeFontPadding="true"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ednumb"
            android:textColor="@color/red"
            android:text="Numberphone :*"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:background="@drawable/custom_editext"
            android:hint="Enter your numberphone*"
            android:padding="8dp"
            android:includeFontPadding="true"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btlogin"
            android:drawablePadding="8dp"
            android:text="Sign up"
            android:padding="8dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/red"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/note"
            android:textColor="@color/red"
            android:text="If you have acount ? Log in"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/note1"
            android:textColor="@color/black"
            android:text="Or Log in with"
            android:textAlignment="center"
            android:textSize="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/fb"

                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:background="@drawable/google"

                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>